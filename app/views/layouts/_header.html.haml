%nav.navbar.navbar-expand-lg.navbar-light.bg-light
  = link_to 'BundleBuddi', new_bundle_path, class: 'navbar-brand'
  %button.navbar-toggler{type: 'button', 'data-toggle': 'collapse', 'data-target': '#navbarSupportedContent', 'aria-controls': 'navbarSupportedContent', 'aria-expanded': false, 'aria-label': 'Toggle navigation' }
    %span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto
      - if current_user
        - if current_user.bundle
          %li.nav-item
            = link_to current_user.bundle, class: 'nav-link', disabled: !current_user.bundle do
              My Bundle
        - else
          %li.nav-item
            = link_to new_bundle_path, class: 'nav-link' do
              Create Bundle
              - if current_page?(controller: 'bundles', action: 'new')
                %span.sr-only (current)
        - if current_user.admin?
          %li.nav-item
            = link_to subscriptions_path, class: 'nav-link' do
              Edit Subscriptions (Admin Only)
              - if current_page?(controller: 'subscriptions')
                %span.sr-only (current)
    %ul.navbar-nav
      - if current_user
        %li.nav-item
          = link_to 'Log out', destroy_user_session_path, method: :delete, class: 'nav-link'
      - else
        %li.nav-item
          = link_to 'Log in', new_user_session_path, class: 'nav-link'
        %li.nav-item
          = link_to 'Sign up', new_user_registration_path, class: 'nav-link'

