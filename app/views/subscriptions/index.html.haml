%h1
  Available Subscriptions
%table.table.table-striped
  %tr
    %th Name
    %th Pre-bundling Cost
    %th Edit
    %th Delete
  - @subscriptions.each do |subscription|
    %tr
      %td= subscription.name
      %td= number_to_currency subscription.cost_in_cents/100.0
      %td= link_to 'Edit', edit_subscription_path(subscription)
      %td= link_to 'Delete', { action: :destroy, id: subscription.id }, method: :delete, data: { confirm: 'Are you sure?' }

= link_to 'New Subscription', new_subscription_path
